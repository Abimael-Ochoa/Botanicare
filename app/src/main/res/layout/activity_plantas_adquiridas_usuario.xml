<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlantasAdquiridasUsuario">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#225E1D"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regreso"
            android:contentDescription="Regresar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botanicare"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/my_custom_font"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plantas Adquiridas"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/coustard"
        android:textSize="18sp"
        android:textColor="#333333" />
    <!-- Imagen de la planta -->
    <GridView
        android:id="@+id/plantsGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="1"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:background="@drawable/background_plantas_disponibles" />


</LinearLayout>

