<!-- fragment_plant_list.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F0F0">

    <!-- Encabezado de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#225E1D"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_regreso"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Botanicare"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="@font/my_custom_font"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plantas adquiridas"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/coustard"
        android:textSize="18sp"
        android:textColor="#333333" />
    <!-- Imagen de la planta -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/background_plantas_disponibles">
    <!-- item_plant_list.xml -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/background_cantidad"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_plant"
                android:contentDescription="Plant Image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/plant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Planta araÃ±a"
                    android:textSize="18sp"
                    android:fontFamily="@font/my_custom_font" />

                <TextView
                    android:id="@+id/plant_acquisition_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adquirida el 26/08/2023"
                    android:textSize="14sp"
                    android:fontFamily="@font/coustard"
                    android:textColor="#757575" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
