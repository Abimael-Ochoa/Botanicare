<!-- res/layout/plants_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_rounded"
    android:elevation="4dp"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/ic_plant"
        />

    <TextView
        android:id="@+id/plantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/coustard"
        android:text="Planta de casa"
        android:layout_marginTop="8dp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_estrella"
            android:layout_marginEnd="2dp"/>
        <TextView
            android:id="@+id/plantQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="@font/coustard"
            android:text="Cantidad: 0"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
