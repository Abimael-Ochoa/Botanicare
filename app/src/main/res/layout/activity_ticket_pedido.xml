<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#94E38E">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#225E1D">

        <ImageView
            android:id="@+id/icono_planta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plant_icon"
            android:contentDescription="Icono planta"
            android:layout_marginEnd="8dp" />

        <TextView
            android:fontFamily="@font/coustard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Pedido"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor de InformaciÃ³n del Usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF6DD"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Usuario:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:fontFamily="@font/my_custom_font"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Lista de Plantas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF6DD"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Plantas Seleccionadas:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lista_plantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Ejemplo de un item de planta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tv_nombre_planta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre de la Planta"
                    android:fontFamily="@font/my_custom_font"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_cantidad_planta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/my_custom_font"
                    android:text="Cantidad: 2"
                    android:textSize="16sp"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Botones Aceptar y Cancelar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#4CAF50"
            android:text="Regresar"
            android:fontFamily="@font/coustard"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</LinearLayout>
