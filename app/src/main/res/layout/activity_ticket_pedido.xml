<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="#225E1D">

        <ImageView
            android:id="@+id/icono_planta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plant_icon"
            android:contentDescription="Icono planta"
            android:layout_marginEnd="8dp" />

        <TextView
            android:fontFamily="@font/coustard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Pedido"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor de InformaciÃ³n del Usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF6DD"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Usuario:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:fontFamily="@font/my_custom_font"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Lista de Plantas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF6DD"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Plantas Seleccionadas:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lista_plantas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF6DD"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Fecha de Registro:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha de registro..."
            android:fontFamily="@font/my_custom_font"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>


    <!-- Botones Aceptar y Cancelar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_regresar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#4CAF50"
            android:text="Regresar"
            android:fontFamily="@font/coustard"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</LinearLayout>
