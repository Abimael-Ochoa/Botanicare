<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado con botón de regreso y título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#225E1D"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/regreso_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_regreso"
            android:contentDescription="Botón de regreso"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/my_custom_font"
            android:text="Botanicare"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginStart="75dp" />

    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:text="Buscar pedido"
            android:textSize="24sp"
            android:layout_gravity="center" />

        <!-- Campo para ingresar el ID proporcionado por el administrador -->
        <EditText
            android:id="@+id/et_id_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/coustard"
            android:hint="Ingresa tu ID proporcionado por el admin"
            android:inputType="text"
            android:layout_marginTop="16dp" />

        <!-- Botón para buscar las plantas asociadas con el ID -->
        <Button
            android:fontFamily="@font/my_custom_font"
            android:id="@+id/buscar_planta"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#4CBA43"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginTop="16dp" />

        <Button
            android:fontFamily="@font/my_custom_font"
            android:id="@+id/btn_mis_plantas"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#4CBA43"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ver mis plantas"
            android:layout_marginTop="16dp" />


        <!-- Icono de la aplicación -->
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/plant_icon"
            android:contentDescription="Ícono de la aplicación"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>
