<resources>
    <style name="CustomMenuItemFont">
        <item name="android:fontFamily">@font/my_custom_font</item>  <!-- Aplica la fuente -->
    </style>
    <item name="colorPrimaryDark" type="color">@color/tu_color_verde</item>

    <style name="NavDrawerItemStyle">
        <item name="android:textSize">25dp</item> <!-- Aumenta el tamaÃ±o del texto -->
    </style>
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowMinWidthMajor">80%</item> <!-- Ajusta el porcentaje si es necesario -->
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="TransparentDialogTheme2" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowMinWidthMajor">65%</item> <!-- Ajusta el porcentaje si es necesario -->
        <item name="android:windowMinWidthMinor">65%</item>
    </style>

        <style name="ErrorMessageStyle">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:fontFamily">@font/my_custom_font</item>
            <item name="android:textColor">#FF0000</item>
            <item name="android:textSize">16sp</item>
            <item name="android:visibility">gone</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_marginTop">16dp</item>
            <item name="android:layout_marginStart">32dp</item>
            <item name="android:layout_marginEnd">32dp</item>
        </style>


</resources>
